{
  "manifest_version": 3,
  "name": "Disney+ Skipper",
  "version": "1.0",
  "description": "Salta la intro y pasa al siguiente episodio autom√°ticamente en Disney+.",
  "permissions": ["scripting", "storage"],
  "host_permissions": ["https://www.disneyplus.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.disneyplus.com/*"],
      "js": ["content.js"]
    }
  ]
}